{
    "GET" : {
        "defaultRoute" : "view",
        "view" : {
            "model" : {
                "instanceOf" : "BasicUser\\Model\\BasicUser"
            },
            "view" : {
                "instanceOf" : "Transphporm\\Builder",
                "constructParams" : ["Layouts/layout.xml", "{dir}/view/user.tss"]
            }
        },
        "signin" : {
            "model" : {
                "instanceOf" : "BasicUser\\Model\\Form\\Signin"
            },
            "view" : {
                "instanceOf" : "Transphporm\\Builder",
                "constructParams" : ["Layouts/layout.xml", "{dir}/view/form/signin.tss"]
            },
            "controller" : {
                "instanceOf" : "MVC\\Controller\\Form"
            },
            "action" : "$1",
            "defaultAction" : "main"
        },
        "signup" : {
            "model" : {
                "instanceOf" : "BasicUser\\Model\\Form\\Signup"
            },
            "view" : {
                "instanceOf" : "Transphporm\\Builder",
                "constructParams" : ["Layouts/layout.xml", "{dir}/view/form/signup.tss"]
            },
            "controller" : {
                "instanceOf" : "MVC\\Controller\\Form"
            },
            "action" : "$1",
            "defaultAction" : "main"
        },
        "signout" : {
            "model" : {
                "instanceOf" : "BasicUser\\Model\\Form\\Signout"
            },
            "view" : {
                "instanceOf" : "Transphporm\\Builder",
                "constructParams" : ["Layouts/layout.xml", "{dir}/view/form/signout.tss"]
            },
            "controller" : {
                "instanceOf" : "MVC\\Controller\\Form"
            },
            "action" : "$1",
            "defaultAction" : "submit"
        },
        "edit" : {
            "model" : {
                "instanceOf" : "BasicUser\\Model\\Form\\Edit",
                "constructParams" : [
                    [
                        "first_name", "last_name", "email", "username"
                    ]
                ]
            },
            "view" : {
                "instanceOf" : "Transphporm\\Builder",
                "constructParams" : ["Layouts/layout.xml", "{dir}/view/form/edit.tss"]
            },
            "controller" : {
                "instanceOf" : "MVC\\Controller\\Form"
            },
            "action" : "$1",
            "defaultAction" : "main"
        },
        "change-password" : {
            "model" : {
                "instanceOf" : "BasicUser\\Model\\Form\\ChangePassword"
            },
            "view" : {
                "instanceOf" : "Transphporm\\Builder",
                "constructParams" : ["Layouts/layout.xml", "{dir}/view/form/changePassword.tss"]
            },
            "controller" : {
                "instanceOf" : "MVC\\Controller\\Form"
            },
            "action" : "$1",
            "defaultAction" : "main"
        },
        "change-security-data" : {
            "model" : {
                "instanceOf" : "BasicUser\\Model\\Form\\ChangeSecurityData"
            },
            "view" : {
                "instanceOf" : "Transphporm\\Builder",
                "constructParams" : ["Layouts/layout.xml", "{dir}/view/form/changeSecurityData.tss"]
            },
            "controller" : {
                "instanceOf" : "MVC\\Controller\\Form"
            },
            "action" : "$1",
            "defaultAction" : "main"
        },
        "send-reset-password" : {
            "model" : {
                "instanceOf" : "BasicUser\\Model\\Form\\SendResetPassword",
                "substitutions" : {
                    "MVC\\Model\\Emailer" : { "Dice::INSTANCE" : "MVC\\Model\\PHPMailerEmailer", "params" : [
                        { "Dice::INSTANCE" : "Transphporm\\Builder", "params" : ["{dir}/view/form/resetEmail.xml", "{dir}/view/form/resetEmail.tss"]},
                        "Reset Email"
                        ]},
                    "Token\\Generator" : "$user_reset_token"
                }
            },
            "view" : {
                "instanceOf" : "Transphporm\\Builder",
                "constructParams" : ["Layouts/layout.xml", "{dir}/view/form/sendResetPassword.tss"]
            },
            "controller" : {
                "instanceOf" : "MVC\\Controller\\Form"
            },
            "action" : "$1",
            "defaultAction" : "main"
        },
        "reset-password" : {
            "model" : {
                "instanceOf" : "BasicUser\\Model\\Form\\ResetPassword",
                "substitutions" : {
                    "Token\\Generator" : "$user_reset_token"
                }
            },
            "view" : {
                "instanceOf" : "Transphporm\\Builder",
                "constructParams" : ["Layouts/layout.xml", "{dir}/view/form/resetPassword.tss"]
            },
            "controller" : {
                "instanceOf" : "MVC\\Controller\\Form"
            },
            "action" : "$1",
            "defaultAction" : "main"
        }
    },
    "POST" : {
        "signin" : {
            "inherit" : "GET",
            "defaultAction" : "submit"
        },
        "signup" : {
            "inherit" : "GET",
            "defaultAction" : "submit"
        },
        "edit" : {
            "inherit" : "GET",
            "defaultAction" : "submit"
        },
        "change-password" : {
            "inherit" : "GET",
            "defaultAction" : "submit"
        },
        "change-security-data" : {
            "inherit" : "GET",
            "defaultAction" : "submit"
        },
        "send-reset-password" : {
            "inherit" : "GET",
            "defaultAction" : "submit"
        },
        "reset-password" : {
            "inherit" : "GET",
            "defaultAction" : "submit"
        },
        "ajax" : {
            "view" : {
                "instanceOf" : "Transphporm\\Builder"
            },
            "controller" : {
                "instanceOf" : "BasicUser\\Controller\\Ajax"
            },
            "action" : "$1"
        }
    }
}
