<form method="POST" action="user/change-password">
    <h2>Change Password</h2>
    <div class="o-layout">
      <div class="u-1/2@tablet o-layout__item">
        <label for="username">Username:</label>
        <input class="u-1/1" name="username" required="required" type="text" />
      </div>
      <div class="u-1/2@tablet o-layout__item">
        <label for="password">Password:</label>
        <input class="u-1/1" name="password" required="required" type="password" />
      </div>
      <div class="u-1/2@tablet o-layout__item">
        <label for="new_password">New Password:</label>
        <input class="u-1/1" name="new_password" required="required" type="password" />
      </div>
      <div class="u-1/2@tablet o-layout__item">
        <label for="new_password_confirm">Confirm New Password:</label>
        <input class="u-1/1" name="new_password_confirm" required="required" type="password" />
      </div>
    </div>
    <div>
      <button type="submit" class="button-primary">Change Password</button>
    </div>
</form>
<script>$(onready.user.form.change_password);</script>
