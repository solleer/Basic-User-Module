<form method="POST" action="user/change-security-data">
    <h2>Change Security Data</h2>
    <div class="o-layout">
      <div class="u-1/2@tablet o-layout__item">
        <label for="username">Username:</label>
        <input class="u-1/1" name="username" required="required" type="text" />
      </div>
      <div class="u-1/2@tablet o-layout__item">
        <label for="password">Password:</label>
        <input class="u-1/1" name="password" required="required" type="password" />
      </div>
      <div class="u-1/2@tablet o-layout__item">
        <label for="password">New Security Question</label>
        <textarea class="u-1/1" name="security_question" required="required"></textarea>
      </div>
      <div class="u-1/2@tablet o-layout__item">
        <label for="password_confirm">New Security Answer</label>
        <textarea class="u-1/1" name="security_answer" required="required"></textarea>
      </div>
    </div>
    <div>
      <button type="submit" class="c-btn c-btn--primary c-btn--skel">Change Security Data</button>
    </div>
</form>
<script>$(onready.user.form.change_security_data);</script>
