<form method="POST" action="user/reset-password">
    <h2>Reset Password</h2>
    <div class="o-layout">
        <input type="hidden" name="token" />
        <div class="u-1/3@tablet o-layout__item">
            <label for="security_answer">What is your favorite animal?</label>
            <textarea name="security_answer"></textarea>
        </div>
        <div class="u-1/3@tablet o-layout__item">
            <label for="new_password">New Password:</label>
            <input class="u-1/1" name="new_password" required="required" type="password" />
        </div>
        <div class="u-1/3@tablet o-layout__item">
            <label for="new_password_confirm">Confirm New Password:</label>
            <input class="u-1/1" name="new_password_confirm" required="required" type="password" />
        </div>
    </div>
    <div>
        <button type="submit" class="c-btn c-btn--primary c-btn--skel">Reset Password</button>
    </div>
</form>
