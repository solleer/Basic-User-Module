<form method="POST" action="user/signin">
    <h2>Signin</h2>
    <div class="o-layout">
        <div class="u-1/2@tablet o-layout__item">
            <label for="username">Username</label>
            <input type="text" name="username" class="u-1/1" />
        </div>
        <div class="u-1/2@tablet o-layout__item">
            <label for="password">Password</label>
            <input type="password" name="password" class="u-1/1" />
        </div>
    </div>
    <div>
        <button type="submit" class="button-primary">Signin</button>
    </div>
</form>
