<form method="POST" action="user/edit">
    <h2>Edit Account</h2>
    <div class="o-layout">
        <div class="u-1/4@tablet o-layout__item">
            <label for="first_name">First Name</label>
            <input type="text" name="first_name" class="u-1/1" />
        </div>
        <div class="u-1/4@tablet o-layout__item">
            <label for="last_name">Last Name</label>
            <input type="text" name="last_name" class="u-1/1" />
        </div>
        <div class="u-1/4@tablet o-layout__item">
            <label for="email">Username</label>
            <input type="text" name="username" class="u-1/1" />
        </div>
        <div class="u-1/4@tablet o-layout__item">
            <label for="email">Email</label>
            <input type="text" name="email" class="u-1/1" />
        </div>
    </div>
    <div>
        <button type="submit" class="c-btn c-btn--primary c-btn--skel">Save</button>
    </div>
</form>
<script>$(onready.user.form.edit);</script>
