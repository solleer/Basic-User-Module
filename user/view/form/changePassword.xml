<form method="POST" action="user/change-password">
    <div class="row">
        <h2>Change Password</h2>
    </div>
    <div class="row">
      <div class="one-half column">
        <label for="username">Username:</label>
        <input class="u-full-width" name="username" required="required" type="text" />
      </div>
      <div class="one-half column">
        <label for="password">Password:</label>
        <input class="u-full-width" name="password" required="required" type="password" />
      </div>
    </div>
    <div class="row">
      <div class="one-half column">
        <label for="new_password">New Password:</label>
        <input class="u-full-width" name="new_password" required="required" type="password" />
      </div>
      <div class="one-half column">
        <label for="new_password_confirm">Confirm New Password:</label>
        <input class="u-full-width" name="new_password_confirm" required="required" type="password" />
      </div>
    </div>
    <div class="row">
      <button type="submit" class="button-primary">Change Password</button>
    </div>
</form>
<script>$(onready.user.form.change_password);</script>
