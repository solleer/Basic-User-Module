<form>
    <div>
        <h2>Request Password Reset</h2>
    </div>
    <div class="o-layout">
        <div class="u-1/2@tablet o-layout__item">
            <label for="username">Username</label>
            <input type="text" name="username" required="required" class="u-1/1"/>
        </div>
    </div>
    <div>
        <button type="submit" class="button-primary">Send Reset Link</button>
    </div>
</form>
<div id="beforeConfirmationSuccess">
    <h2>Response Sent</h2>
    <p>A reset password link has been sent to the email of the coresponding user.</p>
</div>
<div id="beforeConfirmationError">
    <h2>Error Sending Response</h2>
    <p>That user does not exist.</p>
</div>
