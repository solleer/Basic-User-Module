<form method="POST" action="user/edit">
    <div class="row">
        <h2>Edit Account</h2>
    </div>
    <div class="row">
        <div class="three columns">
            <label for="first_name">First Name</label>
            <input type="text" name="first_name" class="u-full-width" />
        </div>
        <div class="three columns">
            <label for="last_name">Last Name</label>
            <input type="text" name="last_name" class="u-full-width" />
        </div>
        <div class="three columns">
            <label for="email">Username</label>
            <input type="text" name="username" class="u-full-width" />
        </div>
        <div class="three columns">
            <label for="email">Email</label>
            <input type="text" name="email" class="u-full-width" />
        </div>
    </div>
    <div class="row">
        <button type="submit" class="button-primary">Save</button>
    </div>
</form>
<script>$(onready.form.edit);</script>
